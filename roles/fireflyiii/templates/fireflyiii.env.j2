# CACHE_DRIVER=file
# SESSION_DRIVER=file
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=null
# REDIS_DB="0"
# REDIS_CACHE_DB="1"

DKR_CHECK_SQLITE=false
